@model GraniteHouse.Models.ViewModel.ProductsViewModel
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Product Details</h2>

    <div class="p-4 border rounded row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="Products.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="Products.Price" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ProductTypeId"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="Products.ProductTypes.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.SpecialTagsId"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="Products.SpecialTags.Name" class="form-control" />

                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ShadeColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ShadeColor" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Avaliable"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" disabled asp-for="Products.Avaliable" />
                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Products.Image" style="width:100%; border-radius:5px; border:1px solid #bbb9b9" />
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Products.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to list</a>
        </div>
    </div>





